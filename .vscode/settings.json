{
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.cStandard": "c11",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true
    },
    "editor.formatOnSave": true,
    "editor.rulers": [
        80,
        100,
        120
    ],
    "files.exclude": {
        "**/.git": true,
        "**/__pycache__": true,
        "**/*.o": true,
        "**/*.a": true,
        ".pio": true,
        ".platformio": true
    }
}